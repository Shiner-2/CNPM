                <Font size="24.0" />
            </font>
            <effect>
                <InnerShadow />
            </effect>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
      <TextField fx:id="DisplayName" layoutX="360.0" layoutY="335.0" prefHeight="50.0" prefWidth="300.0" promptText="Enter your display name">
         <font>
            <Font size="24.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
        <PasswordField fx:id="Password" layoutX="360.0" layoutY="441.0" prefHeight="50.0" prefWidth="300.0" promptText="Enter your password">
            <font>
                <Font size="24.0" />
            </font>
            <effect>
                <InnerShadow />
            </effect>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </PasswordField>
      <PasswordField fx:id="Password1" layoutX="360.0" layoutY="540.0" prefHeight="50.0" prefWidth="300.0" promptText="Enter your password">
         <font>
            <Font size="24.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
        <Label layoutX="360.0" layoutY="204.0" text="Username">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="360.0" layoutY="404.0" text="Password">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
