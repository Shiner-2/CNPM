<AnchorPane prefHeight="650.0" prefWidth="600.0" style="-fx-background-color: #84e8e3;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hhd.WordleController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="213.0" layoutY="14.0" text="Wordle">
         <font>
            <Font name="Cooper Black" size="50.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.06518518179655075" green="0.23741130530834198" blue="0.9263157844543457" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.821052610874176" green="0.18549707531929016" blue="0.7257192730903625" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <VBox fx:id="WordleContainer" alignment="CENTER" layoutX="112.0" layoutY="82.0" prefWidth="375.0" style="-fx-border-color: linear-gradient(to left, #e3470e, #e3ce0e);" />
      <Button fx:id="btn" layoutX="354.0" layoutY="566.0" mnemonicParsing="false" onAction="#onWordleBtnSubmit" prefHeight="50.0" prefWidth="90.0" style="-fx-background-color: linear-gradient(to left, #e3470e, #e3ce0e);" text="Check" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextField fx:id="WordleInput" layoutX="127.0" layoutY="567.0" prefHeight="40.0" prefWidth="200.0" style="-fx-border-color: linear-gradient(to left, #e3470e, #e3ce0e); -fx-border-width: 5; -fx-border-radius: 10; -fx-background-radius: 10;">
         <font>
            <Font size="18.0" />
         </font></TextField>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="29.0" layoutY="26.0" onMouseClicked="#LoadGames">
         <image>
            <Image url="@../../../img/images-removebg-preview-removebg-preview.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
