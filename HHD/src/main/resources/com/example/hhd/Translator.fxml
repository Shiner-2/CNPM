<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hhd.TranslatorController">
   <children>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="25.0" layoutY="25.0" onMouseClicked="#LoadApp">
         <image>
            <Image url="@../../../img/images-removebg-preview-removebg-preview.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Label fx:id="lbLeft" layoutX="25.0" layoutY="156.0" text="Vietnamese">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lbRight" layoutX="325.0" layoutY="156.0" text="English">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="275.0" layoutY="215.0" onMouseClicked="#changeLanguage">
         <image>
            <Image url="@../../../img/2wayarrow.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fitHeight="110.0" fitWidth="200.0" layoutX="208.0" layoutY="20.0">
         <image>
            <Image url="@../../../img/Translator-removebg-preview.png" />
         </image>
      </ImageView>
      <TextArea fx:id="TFLeft" layoutX="25.0" layoutY="190.0" prefHeight="100.0" prefWidth="250.0" promptText="Enter your text here..." style="-fx-border-color: black;">
         <font>
            <Font size="14.0" />
         </font></TextArea>
      <TextArea fx:id="TFRight" disable="true" layoutX="325.0" layoutY="190.0" prefHeight="100.0" prefWidth="250.0" promptText="Press Translate and wait a bit" style="-fx-border-color: black;" stylesheets="@../../../CSS/translate.css">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button layoutX="251.0" layoutY="311.0" mnemonicParsing="false" onAction="#translate" prefHeight="38.0" prefWidth="114.0" style="-fx-background-color: #3766a1; -fx-background-radius: 10;" text="Translate" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ImageView fitHeight="40.0" fitWidth="50.0" layoutX="518.0" layoutY="245.0" onMouseClicked="#speakRight">
         <image>
            <Image url="@../../../img/volume-high-solid.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fitHeight="40.0" fitWidth="50.0" layoutX="216.0" layoutY="245.0" onMouseClicked="#speakLeft">
         <image>
            <Image url="@../../../img/volume-high-solid.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
